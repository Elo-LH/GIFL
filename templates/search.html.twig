{% extends "layout.html.twig" %}

{% block header %}
	{% include 'header.html.twig' %}
{% endblock %}


{% block main %}

	<main>
		<h1 class="h1-regular">Trending hashtags</h1>
		<div class="horizontal-trending-wrapper snaps-inline">
			{% for key, hashtag in hashtags %}
				<a href="index.php?route=hashtag-page&hashtag={{hashtag.id}}" class="horizontal-trending-card">
					<img class="horizontal-trending-gif" src="{{hashtagsLatestGifs[key].link}}">
					<p class="horizontal-trending-hashtag">#{{hashtag.name}}</p>
				</a>
			{% endfor %}
		</div>

		<form action="index.php?route=search-result" method="POST" class="search-bar">
			<input type="text" name="input-search" id="input-search" class="input-search">
			<div class="search-bar-buttons-wrapper">
				<button type="submit" name="action" value="hashtag" class="yellow-button small-button">Search GIFs</button>
				<button type="submit" name="action" value="collection" class="yellow-button small-button">Search collections</button>
			</div>
		</form>
		<div class="js-search-result-display masonry-grid"></div>
		<div aria-modal="true" class="gif-display-modale-overlay modale-hidden">
			<div class="gif-display-modale modale-hidden">
				<button class="pink-button small-button close-modale-btn js-close-modale">Close</button>
				<div class="gif-card-top">
					<div class="gif-card-img-wrapper">
						<img class="js-gif-modale-img" src="" alt="">
					</div>
					<div class="js-gif-modale-hashtags hashtags-wrapper"></div>
				</div>
				<div class="gif-card-bottom">
					<div class="gif-card-auth-options modale-hidden"></div>

					<input class="input-search js-gif-modale-input js-input-search-gif" type="text">
					<div class="gif-card-buttons-wrapper">
						<button class="yellow-button small-button js-copy-btn-gif">Copy Link</button>
						<span class="js-copy-message-gif copy-message-gif-modale modale-hidden">GIF Link copied to clipboard</span>
						<button class="yellow-button small-button">Download GIF</button>
					</div>
				</div>

			</div>
		</div>
	</main>
{% endblock %}
