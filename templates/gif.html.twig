{% extends "layout.html.twig" %}

{% block header %}
	<header class="page-header">
		<nav class="page-header-nav">
			<a href="index.php"><img class="logo-GIFL" src="../assets/images/logoGIFL.png" alt="GIFL Home page"></a>
			<div class="links-wrapper">
				<a class="middle-link" href="index.php?route=search">Search</a>
			</div>
		</nav>
	</header>
{% endblock %}


{% block main %}

	<main>
		<div class="gif-card">
			<div class="gif-card-top">
				<img src="{{gif.link}}" alt="">
				<div class="hashtags-wrapper">
					{% for hashtag in hashtags %}
						<a href="index.php?route=hashtag&hashtag={{hashtag.id}}" class="gif-card-hashtag">#{{hashtag.name}}</a>
					{% endfor %}
				</div>
			</div>
			<div class="gif-card-bottom">
				<input class="input-search" type="text" value="{{gif.link}}">
				<div class="gif-card-buttons-wrapper">
					<button class="yellow-button small-button">Copy Link</button>
					<button class="yellow-button small-button">Download GIF</button>
				</div>
			</div>
		</div>

	</main>
{% endblock %}
