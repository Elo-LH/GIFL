{% extends "layout.html.twig" %}

{% block header %}
	{% include 'header.html.twig' %}
{% endblock %}


{% block main %}
	<main>
		<h1 class="h1-regular">Sign In</h1>
		<form class="sign-form" action="index.php?route=check-sign-in" method="post">
			<input type="hidden" name="csrf-token" id="csrf-token" value="{{session.csrfToken}}"/>
			<div class="sign-form-input-wrapper">
				<label class="form-label" for="email">Email</label>
				<input class="form-input" type="email" name="email" id="email" required>
			</div>
			<div class="sign-form-input-wrapper">
				<label class="form-label" for="password">Password</label>
				<input class="form-input" type="password" name="password" id="password" required>
			</div>


			<button class="yellow-button small-button" type="submit">Sign In</button>
		</form>
	</main>
{% endblock %}
